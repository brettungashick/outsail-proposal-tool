generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                   String    @id @default(cuid())
  email                String    @unique
  passwordHash         String
  name                 String
  role                 String    @default("advisor")
  inviteToken          String?   @unique
  inviteStatus         String    @default("active") // pending | active
  passwordResetToken   String?   @unique
  passwordResetExpires DateTime?
  createdAt            DateTime  @default(now())
  projects             Project[]
}

model Project {
  id          String      @id @default(cuid())
  name        String
  clientName  String
  clientEmail String?
  status      String      @default("draft")
  advisorId   String
  advisor     User        @relation(fields: [advisorId], references: [id])
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  documents   Document[]
  analyses    Analysis[]
  shareLinks  ShareLink[]
}

model Document {
  id           String   @id @default(cuid())
  projectId    String
  project      Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  vendorName   String
  fileName     String
  filePath     String
  fileType     String
  rawText      String?
  parsedData   String?
  documentType String   @default("initial_quote")
  quoteVersion Int      @default(1)
  isActive     Boolean  @default(true)
  uploadedAt   DateTime @default(now())
}

model Analysis {
  id                   String           @id @default(cuid())
  projectId            String
  project              Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  version              Int              @default(1)
  status               String           @default("complete") // draft | clarifying | complete
  comparisonData       String
  standardizationNotes String?
  vendorNotes          String?
  nextSteps            String?
  citations            String?
  discountToggles      String?
  hiddenRows           String?
  parsedProposals      String?          // JSON: stored parsed proposals for finalization
  clarifyingQuestions  String?          // JSON: AI-generated questions
  advisorAnswers       String?          // JSON: advisor responses to questions
  createdBy            String
  createdAt            DateTime         @default(now())
  edits                AnalysisEdit[]
  learningEvents       LearningEvent[]
}

model AnalysisEdit {
  id         String   @id @default(cuid())
  analysisId String
  analysis   Analysis @relation(fields: [analysisId], references: [id], onDelete: Cascade)
  fieldPath  String
  oldValue   String
  newValue   String
  editedBy   String
  editedAt   DateTime @default(now())
}

model ShareLink {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  token     String   @unique
  email     String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Vendor {
  id          String   @id @default(cuid())
  name        String   @unique
  logoUrl     String?
  accentColor String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AppSettings {
  id       String  @id @default("app")
  logoUrl  String?
}

model LearningEvent {
  id               String   @id @default(cuid())
  analysisId       String
  analysis         Analysis @relation(fields: [analysisId], references: [id], onDelete: Cascade)
  projectId        String
  vendorName       String
  rowId            String
  sectionName      String
  vendorIndex      Int
  editType         String   // value_change | status_change | label_change
  oldDisplay       String
  oldAmount        Float?
  oldStatus        String?
  newDisplay       String
  newAmount        Float?
  newStatus        String?
  rowLabel         String
  reasonTag        String?  // misclassified | wrong_unit | discount | bundled | other
  promotedToRuleId String?
  userId           String
  createdAt        DateTime @default(now())
}

model VendorPlaybookRule {
  id                 String   @id @default(cuid())
  vendorName         String   // Vendor.name or "*" for global
  name               String
  conditionType      String   // contains | regex
  conditionValue     String
  conditionField     String   // label | section | display
  actionType         String   // set_status | add_note (v1)
  actionValue        String   // JSON string
  examples           String?  // JSON array
  confidence         String   @default("sure") // sure | maybe
  enabled            Boolean  @default(true)
  version            Int      @default(1)
  createdBy          String
  createdFromEventId String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}
